<h1><%= @user.name %></h1>

Total views: <span class="label label-info"> <i class="icon-white icon-eye-open" ></i> <%= @total %></span>

<div class="row">
	<div class="span8">
	<ul>
		<% @user.posts.each do |post| %>
		<li>
			<h3><%= link_to post.title, post %> <span class="label label-info"><i class="icon-white icon-eye-open" ></i> <%= post.total %></span></h3>

		</li>
		<% end %>

	</ul>
</div>
</div>

<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :provider, as: :hidden %>
    <%= f.input :media_type, as: :hidden %>
    <%= f.input :title, as: :hidden %>
    <%= f.input :views, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

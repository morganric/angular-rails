<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :provider %>
    <%= f.input :media_type %>
    <%= f.input :title %>
    <%= f.input :views %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

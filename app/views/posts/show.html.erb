

<% content_for :header, '<script src="http://cdn.embed.ly/jquery.embedly-3.1.1.min.js" type="text/javascript"></script>' %>
<h1>
  <%= link_to @post.title, @post.url, :target => "_blank" %>
</h1>
<div class="row">

<div class="span8">
	<% if @post.embed_code %>
	<div id="" class="flex-video">
	  <%= raw @post.embed_code %>
	</div>
	<% else %>
	<div id="content" class="flex-video">
	  <%= link_to '', @post.url %>
	</div>
	<% end %>
</div>
<div class="span4">

	<p><% if @post.thumbnail_url %><%= image_tag @post.thumbnail_url %><% end %></p>
	<p><% if @post.description %><%= @post.description %><% end %></p>
	<p><% if @post.author_name %>by <%= @post.author_name %><% end %></p>
	<p><% if @post.user %>via <%= link_to @post.user.name, @post.user %><% end %></p>
	<p><% if @post.provider_url %>on <%= link_to @post.provider, @post.provider_url, :target => "_blank" %><% end %></p>
	

	<p>
	  <span class="label label-warning"><i class="icon-white icon-arrow-down"></i> <%= @post.views %></span>
	  <span class="label label-info"><i class="icon-white icon-eye-open"></i> <%= @post.total %></span>
	  <span class="label label-success"><i class="icon-white icon-arrow-up"></i> <%= @post.increases %></span>
	  <span class="label label-facebook"><i class="icon-white icon-thumbs-up"></i> <%= @post.title.length %></span>
	</p>

	<%= button_to 'Add Views', {:controller => :posts, :action => "add_views", :method => :put, :num =>   10} , :class => "btn"  %>

	<h4>Share</h4>
	<p>
		<code> <%= "#{request.protocol + request.host_with_port}/posts/#{@post.id}" %> </code>
	</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
</div>


<script src="http://cdn.embed.ly/jquery.embedly-3.1.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
	$('#content a').embedly({key: 'de58199a853c4012893443678819d1f0'});
</script>
